<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <%= form_with model: [:admin, @test],
                  data: { test_id: @test.id },
                  id: 'common_form_with',
                  local: true do |form| %>
      <div class="form-group">
        <%= render 'shared/errors', resource: @test %>

        <p>
          <%= form.label :title %><br>
          <%= form.text_field :title, id: :test_title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :level %><br>
          <%= form.number_field :level, id: :test_level, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :timer %><br>
          <%= form.number_field :timer, id: :test_timer, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :category_id %>:
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
        </p>

        <p><%= form.submit 'Update', class: 'btn btn-primary' %></p>
      </div>
    <% end %>
  </div>
</div>