<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <div class="form-group">
        <%= render 'shared/errors', resource: @badge %>

        <p>
          <%= form.label :title %>
          <%= form.text_field :title, id: :badge_title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :rule_type %>
          <%#= form.collection_select :rule_type, id: :badge_rule_type, class: 'form-control' %>
          <%= form.collection_select :rule_type, Badge.all, :id, :rule_type, prompt: true, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :rule_value %>
          <%= form.text_field :rule_value, id: :badge_rule_value, class: 'form-control' %>
        </p>

        <p>
          <%#= form.label :image_url %>
          <%#= form.file_field :image_url, id: :badge_image_url, class: 'form-control' %>
        </p>

        <p><%= form.submit 'Update', class: 'btn btn-primary' %></p>
      </div>
    <% end %>
  </div>
</div>