<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h3><%= link_to 'Test Guru', root_path %></h3>
    <% if user_signed_in? %>
      <p class="nav user">
        Welcome, <b><%= current_user.name %> </b>Guru |
        <%= link_to 'Выход', destroy_user_session_path, data: { method: :delete } %>
      </p>
    <% else %>
      <p class="nav user">
        <%= link_to 'Регистрация', user_session_path %> |
        <%= link_to 'Вход', new_user_session_path %>
      </p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
